

{{> _navbar}}
{{> _msg}}
<div class="container mt-4">
<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>
</div>

{{#each categorias}}
<div class="container mt-4">
    <div class="card mt-4">
        <div class="card-body">
            <h4>Nome: {{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <small> Data: {{date}}</small> <br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-3">Edit</button></a>
            <form action="/admin/categorias/apagar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Apagar</button>
            </form>
        </div>
    </div>
</div>
{{else}}
    <h4 class="mt-4">Nenhuma Categoria!</h4>
{{/each}}